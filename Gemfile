source 'https://rubygems.org'
ruby '2.1.0'

# Rails.
gem 'rails', '4.0.2'

# Database.
gem 'pg'

# Assets.
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'

# Web server.
gem 'unicorn'
gem 'foreman'

group :development do
  gem 'rspec-rails'
end

# Test dependencies.
group :development, :test do
  gem 'better_errors'
  gem 'dotenv-rails'
  gem 'pry'
end
